/* Welcome screen */
#welcome_screen {
    align: center middle;
}

#start_button {
    width: 40%;
    border: solid white;
}

/* Create Identity screen */
#create_identity_button {
    width: 40%;
    border: solid white;
    background: rgba(40, 40, 40, 0.5);
    align: center middle;
    margin-left: 50;
    margin-top: 5;
}

#create_identity_button:hover {
    background: rgba(40, 40, 40, 0.9);
}

/* Navigation sidebar */
.nav_sidebar {
    color: blue;
    height: 100%;
    width: 20%;
    align: left middle;
}

.nav_sidebar_button {
    width: 100%;
    height: 10%;
    border: solid white;
    background: rgba(40, 40, 40, 0.5);
    margin: 5;
}

.nav_sidebar_button:hover {
    background: rgba(40, 40, 40, 0.9);
}

/* All content pages */
.content_page {
    color: white;
    height: 100%;
    width: 80%;
    align: right middle;
    background: grey;
    content-align: left middle;
}

.content_page Input {
    background: rgba(40, 40, 40, 0.5);
    width: 100%;
    margin-left: 1;
    margin-right: 1;
}

.content_page Select {
    background: rgba(40, 40, 40, 0.5);
    width: 100%;
    margin-left: 1;
    margin-right: 1;
}

