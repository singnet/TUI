/* Error Exit screen */
#error_exit_label {
    align: center middle;
    width: 100%;
    margin-left: 5;
    margin-right: 5;
    margin-top: 5;
    border: solid white;
}

#error_exit_button {
    align: center middle;
    width: 40%;
    border: solid white;
    background: rgba(40, 40, 40, 0.5);
    margin-left: 55;
    margin-top: 5;
}

/* Popup screen */
#popup_output_label {
    align: center middle;
    width: 100%;
    margin-left: 5;
    margin-right: 5;
    margin-top: 5;
    border: solid white;
}

#output_exit_button {
    align: center middle;
    width: 40%;
    border: solid white;
    background: rgba(40, 40, 40, 0.5);
    margin-left: 55;
    margin-top: 5;
}

/* Exit screen */
exit_page {
    align: center middle;
}

#exit_page {
    grid-size: 2;
    grid-gutter: 1 2;
    grid-rows: 1fr 3;
    padding: 0 1;
    width: 60;
    height: 11;
    border: thick $background 80%;
    background: $surface;
}

#exit_question {
    column-span: 2;
    height: 1fr;
    width: 1fr;
    content-align: center middle;
}

#exit_button, #cancel_exit_button {
    width: 100%;
}